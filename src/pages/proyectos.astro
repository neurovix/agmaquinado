---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";

// Imagenes de proyectos
import CNC2 from "../assets/images/cnc/cnc2.png"; // Polea industrial
import Project1 from "../assets/images/projects/project1.png"; // Dolly
import Project2 from "../assets/images/projects/project2.png"; // Base de precisión
import Project3 from "../assets/images/projects/project3.png"; // Armario industrial
import Project4 from "../assets/images/projects/project4.png"; // Estacion de trabajo
import Project5 from "../assets/images/projects/project5.png"; // Rack industrial

// Array de proyectos con datos de ejemplo
const projects = [
  { title: "Polea Industrial de Gran Capacidad", src: CNC2, category: "Maquinado CNC", description: "Diseño y fabricación de polea de alta precisión para sistemas de transmisión pesada, optimizando el rendimiento y la vida útil del equipo." },
  { title: "Dolly de Traslado para Ensambles", src: Project1, category: "Diseño Industrial & Logística", description: "Implementación de un sistema de transporte interno ergonómico y robusto, diseñado a medida para mejorar la manipulación y seguridad en la línea de producción." },
  { title: "Base de Precisión para Equipos Médicos", src: Project2, category: "Maquinado CNC de Alta Precisión", description: "Componente clave maquinado en acero inoxidable con tolerancias estrechas, asegurando la exactitud y fiabilidad en el equipo final." },
  { title: "Armario de Herramientas Modular", src: Project3, category: "Fabricación Estructural", description: "Diseño y construcción de un armario de almacenamiento industrial modular que maximiza la organización y el acceso rápido en entornos de taller." },
  { title: "Estación de Trabajo Ergonómica y Automatizada", src: Project4, category: "Integración de Celdas de Trabajo", description: "Construcción de una estación de trabajo personalizada con integración de sistemas de control para pruebas de calidad y ensambles complejos." },
  { title: "Rack Industrial Reforzado (Heavy-Duty)", src: Project5, category: "Soldadura y Ensamble", description: "Fabricación de racks de almacenamiento de alta densidad, diseñados para soportar cargas extremas en ambientes de fundición y manufactura pesada." },
];

---

<Layout title="Portafolio de Proyectos - AG Maquinado CNC">
  <main class="bg-gray-900 text-gray-100 font-sans">
    <Navbar />

    <!-- Hero Section: Título de la página -->
    <section class="relative bg-[url(/public/images/projects_hero.jpg)] bg-cover bg-center text-white py-56 px-4 overflow-hidden">
      <div class="relative max-w-7xl mx-auto text-center z-10">
        <h1 class="text-6xl md:text-7xl font-extrabold mb-4 bg-clip-text text-white leading-tight drop-shadow-lg animate-fadeInUp">
          Portafolio de Proyectos
        </h1>
        <p class="text-xl md:text-2xl text-white font-bold max-w-3xl mx-auto font-eras-demi animate-fadeInUp delay-100">
          Soluciones de ingeniería y maquinado que impulsan el futuro de la industria.
        </p>
      </div>
    </section>

    <!-- Galería de Proyectos -->
    <section class="py-32 px-4 bg-gray-900">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-20">
          <h2 class="text-5xl font-bold text-white mb-6 font-eras-demi bg-clip-text">
            CASOS DE ESTUDIO RELEVANTES
          </h2>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto">
            Explora nuestra capacidad técnica a través de trabajos recientes de alta complejidad y precisión.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
          {projects.map((project) => (
            <div class="group bg-gray-800 rounded-xl shadow-2xl overflow-hidden border border-gray-700 hover:border-cyan-500 transition-all duration-500 transform hover:-translate-y-2">
              
              {/* Imagen del Proyecto */}
              <div class="h-60 overflow-hidden">
                <Image
                  src={project.src}
                  alt={project.title}
                  class="w-full h-full object-contain transition-transform duration-700 group-hover:scale-110"
                />
              </div>

              {/* Contenido del Proyecto */}
              <div class="p-6">
                <span class="inline-block bg-blue-600 text-white text-xs font-semibold px-3 py-1 rounded-full mb-3 tracking-wider uppercase">
                  {project.category}
                </span>

                <h3 class="text-2xl font-bold mb-3 text-cyan-300">
                  {project.title}
                </h3>
                
                <p class="text-gray-400 leading-relaxed mb-4">
                  {project.description}
                </p>

                <a
                  href="#"
                  class="inline-flex items-center text-blue-400 font-semibold hover:text-blue-300 transition-colors duration-300"
                >
                  Ver Más Detalles 
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  /* Base para animaciones de entrada sutiles */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Aplica la animación a secciones y elementos clave */
  .animate-fadeInUp {
    opacity: 0;
    animation: fadeInUp 0.7s ease-out forwards;
  }

  /* Retrasos para un efecto escalonado */
  .delay-100 { animation-delay: 0.1s; }
  .delay-200 { animation-delay: 0.2s; }
  .delay-300 { animation-delay: 0.3s; }

  /* Asegura que las secciones tengan la animación, pero solo si no tienen una más específica */
  section {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
    animation-delay: 0.1s;
  }
</style>

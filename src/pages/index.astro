---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import HeroCNC from "../assets/images/cnc/cnc3.png";

import Torneado from "../assets/images/cnc/cnc5.png";
import Maquinado from "../assets/images/gears/gear2.png";
import Fixtures from "../assets/images/fixtures/fixture3.png";

import Caterpillar from "../assets/images/clients/caterpillar.png";
import Yanfeng from "../assets/images/clients/yanfeng.png";
import Tetakawi from "../assets/images/clients/tetakawi.png";
import Gaviones from "../assets/images/clients/gaviones.png";
import IAM from "../assets/images/clients/iam.png";
import Ingetek from "../assets/images/clients/ingetek.png";
import LibertySteel from "../assets/images/clients/liberty_steel.png";
import Manover from "../assets/images/clients/manover.png";
import Mobility from "../assets/images/clients/mobility.png";
import Woodbridge from "../assets/images/clients/woodbridge.png";

import Project1 from "../assets/images/projects/project2.png";
import Project2 from "../assets/images/cnc/cnc2.png";
import Project3 from "../assets/images/projects/project3.png";
import Project4 from "../assets/images/cnc/cnc5.png";
import Project5 from "../assets/images/projects/project5.png";

import Accesories from "../assets/images/services/accesorios.png";
import EngineeringDepartment from "../assets/images/services/departamento_ingenieria.png";
import PiecesManufacturing from "../assets/images/services/manufacturado_piezas.png";
import Manufacturing from "../assets/images/services/manufacturado.png";
import TailorMade from "../assets/images/services/medida.png";
---

<Layout>
  <Navbar />

  <section class="relative bg-[url('/images/hero.jpg')] bg-cover bg-center">
    <div class="absolute inset-0 bg-black/70"></div>

    <div
      class="relative flex flex-col lg:flex-row w-full px-6 lg:px-20 pt-48 text-white pb-20"
    >
      <div class="w-full lg:w-1/2 flex flex-col">
        <h1 class="font-roboto-extrabold text-4xl lg:text-6xl">
          Soluciones Industriales en
          <span class="text-[#3b82f6]">Soldadura</span>,
          <span class="text-[#3b82f6]">Torneado</span> y Maquinado
          <span class="text-[#3b82f6]">CNC</span>
        </h1>

        <p class="mt-10 font-bold text-xl lg:text-2xl font-eras-demi">
          Producción y reparación de componentes mecánicos, prototipos y piezas
          metálicas de precisión a medida.
        </p>

        <div class="mt-10 text-xl flex flex-col sm:flex-row gap-4">
          <a
            href="#servicios"
            class="bg-[#1e3a8a] px-5 font-extrabold py-3 rounded-lg hover:bg-blue-900 text-center transition-all duration-300"
            >NUESTROS SERVICIOS</a
          >
          <a
            href="#contacto"
            class="border-2 border-[#1e3a8a] px-5 py-2 rounded-lg font-extrabold hover:bg-[#1e3a8a] text-center transition-all duration-300"
            >CONTACTO</a
          >
        </div>
      </div>

      <div
        class="w-full lg:w-1/2 flex items-center justify-center mt-10 lg:mt-0"
      >
        <Image
          src={HeroCNC}
          alt="CNC Maquinado Industrial"
          class="w-full max-w-md drop-shadow-2xl"
        />
      </div>
    </div>
  </section>

  <section id="servicios" class="py-20 bg-linear-to-b from-gray-900 to-black">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-20">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold text-white mb-4">
          Nuestras Especialidades
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Tecnología de punta y experiencia comprobada en manufactura de
          precisión para la industria automotriz, aeroespacial y metalmecánica
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div
          class="bg-linear-to-br from-gray-800 to-gray-900 p-6 rounded-2xl border border-blue-500/30 hover:border-blue-500 transition-all duration-300 hover:transform hover:scale-105 shadow-xl hover:shadow-blue-500/20"
        >
          <div class="overflow-hidden rounded-xl mb-6 bg-gray-700/50 p-4">
            <Image
              src={Torneado}
              alt="Torneado CNC"
              class="w-full object-cover h-72 rounded-lg"
            />
          </div>
          <h3 class="text-2xl font-extrabold text-blue-400 mb-4">
            Torneado CNC
          </h3>
          <p class="text-gray-300 mb-4">
            Torneado de alta precisión con control numérico computarizado
          </p>
          <ul class="text-gray-400 space-y-2 text-sm">
            <li>• Ejes y arboles de transmisión</li>
            <li>• Componentes cilíndricos de precisión</li>
            <li>• Piezas de revolución complejas</li>
            <li>• Acabados superficiales especiales</li>
          </ul>
        </div>

        <div
          class="bg-linear-to-br from-gray-800 to-gray-900 p-6 rounded-2xl border border-blue-500/30 hover:border-blue-500 transition-all duration-300 hover:transform hover:scale-105 shadow-xl hover:shadow-blue-500/20"
        >
          <div class="overflow-hidden rounded-xl mb-6 bg-gray-700/50 p-4">
            <Image
              src={Maquinado}
              alt="Maquinado CNC"
              class="w-full h-72 object-cover rounded-lg"
            />
          </div>
          <h3 class="text-2xl font-extrabold text-blue-400 mb-4">
            Maquinado CNC
          </h3>
          <p class="text-gray-300 mb-4">
            Fresado y maquinado de piezas complejas con tolerancias estrictas
          </p>
          <ul class="text-gray-400 space-y-2 text-sm">
            <li>• Engranajes y componentes de transmisión</li>
            <li>• Piezas de geometría compleja</li>
            <li>• Prototipos y producción en serie</li>
            <li>• Múltiples materiales metálicos</li>
          </ul>
        </div>

        <div
          class="bg-linear-to-br from-gray-800 to-gray-900 p-6 rounded-2xl border border-blue-500/30 hover:border-blue-500 transition-all duration-300 hover:transform hover:scale-105 shadow-xl hover:shadow-blue-500/20"
        >
          <div class="overflow-hidden rounded-xl mb-6 bg-gray-700/50 p-4">
            <Image
              src={Fixtures}
              alt="Fixtures y Herramentales"
              class="w-full h-72 object-cover rounded-lg"
            />
          </div>
          <h3 class="text-2xl font-extrabold text-blue-400 mb-4">
            Fixtures y Herramentales
          </h3>
          <p class="text-gray-300 mb-4">
            Diseño y fabricación de dispositivos de sujeción especializados
          </p>
          <ul class="text-gray-400 space-y-2 text-sm">
            <li>• Fixtures de verificación y control</li>
            <li>• Herramentales de producción</li>
            <li>• Dispositivos de inspección</li>
            <li>• Utillaje personalizado</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-gray-900">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-20">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold text-white mb-4">
          Servicios Especializados
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Soluciones integrales de ingeniería y manufactura para proyectos
          industriales
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- CARD TEMPLATE -->
        <div
          class="bg-gray-800 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 border border-gray-700 hover:border-blue-500/50"
        >
          <div
            class="h-64 flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800 p-4"
          >
            <Image
              src={Manufacturing}
              alt="Manufacturado"
              class="w-full h-full object-contain rounded-lg"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-blue-400 mb-3">
              Manufacturado de Precisión
            </h3>
            <p class="text-gray-300 text-sm">
              Fabricación de componentes metálicos con control dimensional
              estricto
            </p>
          </div>
        </div>

        <div
          class="bg-gray-800 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 border border-gray-700 hover:border-blue-500/50"
        >
          <div
            class="h-64 flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800 p-4"
          >
            <Image
              src={PiecesManufacturing}
              alt="Manufacturado de Piezas"
              class="w-full h-full object-contain rounded-lg"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-blue-400 mb-3">
              Piezas Especiales
            </h3>
            <p class="text-gray-300 text-sm">
              Producción de piezas únicas y componentes de reemplazo
            </p>
          </div>
        </div>

        <div
          class="bg-gray-800 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 border border-gray-700 hover:border-blue-500/50"
        >
          <div
            class="h-64 flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800 p-4"
          >
            <Image
              src={EngineeringDepartment}
              alt="Departamento de Ingeniería"
              class="w-full h-full object-contain rounded-lg"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-blue-400 mb-3">
              Ingeniería de Proyecto
            </h3>
            <p class="text-gray-300 text-sm">
              Desarrollo de ingeniería y optimización de procesos
            </p>
          </div>
        </div>

        <div
          class="bg-gray-800 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 border border-gray-700 hover:border-blue-500/50"
        >
          <div
            class="h-64 flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800 p-4"
          >
            <Image
              src={TailorMade}
              alt="A la Medida"
              class="w-full h-full object-contain rounded-lg"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-blue-400 mb-3">
              Soluciones a Medida
            </h3>
            <p class="text-gray-300 text-sm">
              Diseño y fabricación personalizada según especificaciones
            </p>
          </div>
        </div>

        <div
          class="bg-gray-800 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 border border-gray-700 hover:border-blue-500/50"
        >
          <div
            class="h-64 flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800 p-4"
          >
            <Image
              src={Accesories}
              alt="Accesorios"
              class="w-full h-full object-contain rounded-lg"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-blue-400 mb-3">
              Accesorios y Componentes
            </h3>
            <p class="text-gray-300 text-sm">
              Fabricación de accesorios industriales especializados
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-black">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-20">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold text-white mb-4">
          Clientes que Confían en Nosotros
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Trabajamos con líderes de la industria automotriz y manufacturera
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center">
        <div
          class="bg-white rounded-xl p-6 hover:transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
        >
          <Image
            src={Caterpillar}
            alt="Caterpillar"
            class="w-full h-20 object-contain"
          />
        </div>
        <div
          class="bg-white rounded-xl p-6 hover:transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
        >
          <Image
            src={Yanfeng}
            alt="Yanfeng"
            class="w-full h-20 object-contain"
          />
        </div>
        <div
          class="bg-white rounded-xl p-6 hover:transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
        >
          <Image
            src={Tetakawi}
            alt="Tetakawi"
            class="w-full h-20 object-contain"
          />
        </div>
        <div
          class="bg-white rounded-xl p-6 hover:transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
        >
          <Image
            src={Gaviones}
            alt="Gaviones"
            class="w-full h-20 object-contain"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center mt-5">
        <div
          class="bg-white rounded-xl p-6 hover:transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
        >
          <Image
            src={IAM}
            alt="Caterpillar"
            class="w-full h-20 object-contain"
          />
        </div>
        <div
          class="bg-white rounded-xl p-6 hover:transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
        >
          <Image
            src={Ingetek}
            alt="Yanfeng"
            class="w-full h-20 object-contain"
          />
        </div>
        <div
          class="bg-white rounded-xl p-6 hover:transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
        >
          <Image
            src={LibertySteel}
            alt="Tetakawi"
            class="w-full h-20 object-contain"
          />
        </div>
        <div
          class="bg-white rounded-xl p-6 hover:transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
        >
          <Image
            src={Manover}
            alt="Gaviones"
            class="w-full h-20 object-cover"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 gap-8 items-center mt-5">
        <div
          class="bg-white rounded-xl p-6 hover:transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
        >
          <Image
            src={Mobility}
            alt="Caterpillar"
            class="w-full h-20 object-contain"
          />
        </div>
        <div
          class="bg-white rounded-xl p-6 hover:transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-blue-500/50"
        >
          <Image
            src={Woodbridge}
            alt="Yanfeng"
            class="w-full h-20 object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-linear-to-b from-gray-900 to-black">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-20">
      <div
        class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-12 gap-4"
      >
        <div>
          <h2 class="text-4xl lg:text-5xl font-bold text-white mb-4">
            Proyectos Destacados
          </h2>
          <p class="text-gray-300 max-w-2xl">
            Casos de éxito en manufactura de precisión y componentes
            industriales
          </p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div
          class="bg-gray-800 rounded-2xl overflow-hidden group hover:transform hover:scale-105 transition-all duration-300 border border-gray-700 hover:border-blue-500 shadow-xl"
        >
          <div
            class="h-56 bg-linear-to-br from-blue-600 to-blue-900 relative overflow-hidden"
          >
            <Image
              src={Project1}
              alt="Proyecto 1"
              class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-300"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-black/80 to-transparent"
            >
            </div>
            <div class="absolute bottom-4 left-4 text-white">
              <h3 class="text-lg font-bold">Dolly's</h3>
              <p class="text-sm opacity-90">Manufactura de precisión</p>
            </div>
          </div>
        </div>

        <div
          class="bg-gray-800 rounded-2xl overflow-hidden group hover:transform hover:scale-105 transition-all duration-300 border border-gray-700 hover:border-blue-500 shadow-xl"
        >
          <div
            class="h-56 bg-linear-to-br from-blue-600 to-blue-900 relative overflow-hidden"
          >
            <Image
              src={Project2}
              alt="Proyecto 2"
              class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-300"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-black/80 to-transparent"
            >
            </div>
            <div class="absolute bottom-4 left-4 text-white">
              <h3 class="text-lg font-bold">Polea industrial</h3>
              <p class="text-sm opacity-90">Torneado CNC personalizado</p>
            </div>
          </div>
        </div>

        <div
          class="bg-gray-800 rounded-2xl overflow-hidden group hover:transform hover:scale-105 transition-all duration-300 border border-gray-700 hover:border-blue-500 shadow-xl"
        >
          <div
            class="h-56 bg-linear-to-br from-blue-600 to-blue-900 relative overflow-hidden"
          >
            <Image
              src={Project3}
              alt="Proyecto 3"
              class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-300"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-black/80 to-transparent"
            >
            </div>
            <div class="absolute bottom-4 left-4 text-white">
              <h3 class="text-lg font-bold">Dispositivos</h3>
              <p class="text-sm opacity-90">Alta precision y satisfaccion</p>
            </div>
          </div>
        </div>

        <div
          class="bg-gray-800 rounded-2xl overflow-hidden group hover:transform hover:scale-105 transition-all duration-300 border border-gray-700 hover:border-blue-500 shadow-xl"
        >
          <div
            class="h-56 bg-linear-to-br from-blue-600 to-blue-900 relative overflow-hidden"
          >
            <Image
              src={Project4}
              alt="Proyecto 4"
              class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-300"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-black/80 to-transparent"
            >
            </div>
            <div class="absolute bottom-4 left-4 text-white">
              <h3 class="text-lg font-bold">Torneado de Precisión</h3>
              <p class="text-sm opacity-90">Componentes cilíndricos</p>
            </div>
          </div>
        </div>

        <div
          class="bg-gray-800 rounded-2xl overflow-hidden group hover:transform hover:scale-105 transition-all duration-300 border border-gray-700 hover:border-blue-500 shadow-xl"
        >
          <div
            class="h-56 bg-linear-to-br from-blue-600 to-blue-900 relative overflow-hidden"
          >
            <Image
              src={Project5}
              alt="Proyecto 5"
              class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-300"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-black/80 to-transparent"
            >
            </div>
            <div class="absolute bottom-4 left-4 text-white">
              <h3 class="text-lg font-bold">Prototipos Industriales</h3>
              <p class="text-sm opacity-90">Desarrollo y validación</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-gray-900">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl lg:text-5xl font-bold text-white mb-8">
            ¿Por Qué Elegirnos?
          </h2>
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div
                class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center shrink-0 shadow-lg shadow-blue-500/50"
              >
                <span class="text-white font-bold text-xl">✓</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-white mb-2">
                  Tecnología CNC Avanzada
                </h3>
                <p class="text-gray-300">
                  Maquinaria de última generación para tolerancias de hasta
                  ±0.005mm
                </p>
              </div>
            </div>
            <div class="flex items-start space-x-4">
              <div
                class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center shrink-0 shadow-lg shadow-blue-500/50"
              >
                <span class="text-white font-bold text-xl">✓</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-white mb-2">
                  Experiencia Comprobada
                </h3>
                <p class="text-gray-300">
                  Más de 10 años sirviendo a la industria automotriz y
                  metalmecánica
                </p>
              </div>
            </div>
            <div class="flex items-start space-x-4">
              <div
                class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center shrink-0 shadow-lg shadow-blue-500/50"
              >
                <span class="text-white font-bold text-xl">✓</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-white mb-2">
                  Ingeniería Especializada
                </h3>
                <p class="text-gray-300">
                  Equipo técnico capacitado en diseño y optimización de procesos
                </p>
              </div>
            </div>
            <div class="flex items-start space-x-4">
              <div
                class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center shrink-0 shadow-lg shadow-blue-500/50"
              >
                <span class="text-white font-bold text-xl">✓</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-white mb-2">
                  Certificación de Calidad
                </h3>
                <p class="text-gray-300">
                  Procesos certificados y control de calidad en cada etapa
                </p>
              </div>
            </div>
          </div>
        </div>
        <div
          class="bg-linear-to-br from-gray-800 to-black p-8 rounded-2xl border border-blue-500/30 shadow-2xl"
        >
          <h3 class="text-3xl font-extrabold text-white mb-6">
            Nuestros Números
          </h3>
          <div class="grid grid-cols-2 gap-4">
            <div
              class="bg-gray-900/50 p-6 rounded-xl text-center border border-blue-500/20 hover:border-blue-500/50 transition-all"
            >
              <div class="text-4xl font-bold text-blue-400">10000+</div>
              <div class="text-gray-300 mt-2">Piezas Producidas</div>
            </div>
            <div
